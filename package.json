{
  "name": "sentigen-social",
  "version": "1.0.0",
  "description": "AI-powered social media management platform",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "cd frontend && npm run dev",
    "build": "cd frontend && npm install && npm run build",
    "start": "cd frontend && npm run start",
    "lint": "cd frontend && npm run lint",
    "backend:dev": "cd social-media-module/backend && source venv/bin/activate && python -m uvicorn api.main:app --reload --host 0.0.0.0 --port 8000",
    "backend:start": "cd social-media-module/backend && python -m uvicorn api.main:app --host 0.0.0.0 --port 8000",
    "vibe": "npx vibe-tools",
    "vibe:repo": "npx vibe-tools repo",
    "vibe:doc": "npx vibe-tools doc",
    "vibe:ask": "npx vibe-tools ask"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "vibe-tools": "latest"
  }
}
